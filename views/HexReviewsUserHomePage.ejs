<!doctype html>
<html>

<head>
    <title>Add Game</title>

    <!-- All stylesheets and UI material. -->

    <!-- Bootstrap Stylesheet dependencies. -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- Custom client stylesheets. -->
    <link rel="stylesheet" href="CommonStylesheet.css">
    <link rel="stylesheet" href="Animations.css">
    <link rel="stylesheet" href="HexReviewsUserHomePageStylesheet.css">

    <!-- Custom icons and fonts. -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
</head>

<body>

    <!-- Top navigation bar. -->
    <nav class="navbar navbar-expand-lg navbar-dark hexNavbar">
        <a id="navUserHome" class="navbar-brand" href="#">Hex Reviews</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a id="navWriteReview" class="nav-link" href="#">Your Reviews</a>
                </li>
                <li class="nav-item">
                    <a id="navUserViewGames" class="nav-link" href="#">Browse Games</a>
                </li>
                <li class="nav-item">
                    <a id="navViewSubcriptions" class="nav-link" href="#">Subscriptions</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Account
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a id="navViewUserProfile" class="dropdown-item" href="#">View Profile</a>
                        <a id="navLogout" class="dropdown-item" href="#">Logout</a>
                    </div>
                </li>

            </ul>
        </div>
    </nav>

    <!-- Page heading. -->
    <div id="welcomeContainer" class="page-header mainPageHeading">
        <div id="userDiv">
            <h1 id="userWelcome"></h1>
            <div id="userSubDiv">
                <img id="userAvatar" src="" alt="">
                <button id="editProfileButton" class="btn btn-secondary" onclick="editProfile()">Edit Profile</button>
            </div>
        </div>
        <div id="statsDiv">
            <h5 id="userRankStat">Your Rank: </h5>
            <h5 id="totalReviews">Total Reviews: </h5>
            <h5 id="totalFollowers">Total followers: </h5>
        </div>
    </div>

    <div id="hexagonArray">
        <ul id="grid" class="clear">
            <li>
                <button id="browseGamesButton" class="btn hexagon">
                    <i class="material-icons md-48 homeIcon">
                        games
                    </i>
                    <span class="hexText">Browse Games</span>
                </button>
            </li>
            <li>
                <button id="writeReviewButton" class="btn hexagon">
                    <i class="material-icons md-48 homeIcon">
                        create
                    </i>
                    <span id="yourRev" class="hexText">Your Reviews</span>
                </button>
            </li>
            <li>
                <button id="subscriptionsButton" class="btn hexagon">
                    <i class="material-icons md-48 homeIcon">
                        subscriptions
                    </i>
                    <span id="mySubs" class="hexText"> My Subscriptions</span>
                </button>
            </li>
            <li>
                <button id="requestGameButton" class="btn hexagon">
                    <i class="material-icons md-48 homeIcon">
                        playlist_add
                    </i>
                    <span id="gameReq" class="hexText">Request a Game</span>
                </button>
            </li>
            <li>
                <button id="myProfileButton" class="btn hexagon">
                    <i class="material-icons md-48 homeIcon">
                        face
                    </i>
                    <span id="myProf" class="hexText">My Profile</span>
                </button>
            </li>
            <li>
                <button id="helpButton" class="btn hexagon">
                    <i class="material-icons md-48 homeIcon">
                        contact_support
                    </i>
                    <span id="help" class="hexText">Help</span>
                </button>
            </li>
        </ul>
    </div>


    <div id="latestReviewsText">
        <h2 id="yourLatestReviews" class="homeHeading"></h2>
    </div>

    <div id="latestReviewsDiv" class="row latestReviewsDiv">

    </div>

    <div id="latestReviewsText">
        <h2 id="subscriptionReviewsText" class="homeHeading"></h2>
    </div>

    <div id="subscribtionReviewsDiv" class="row latestReviewsDiv">

    </div>

    <!-- All JavaScript material. -->

    <!-- JQuery JavaScript dependencies. -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Boostrap JavaScript Dependencies. -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

    <!-- Custom client JavaScript -->
    <script src="CommonLogic.js"></script>
    <script src="HexReviewsUserHomePageLogic.js"></script>

</body>

</html>