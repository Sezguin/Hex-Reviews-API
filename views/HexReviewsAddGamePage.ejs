                <input id="game_title" type="text" class="form-control" maxlength="60" placeholder="..." required>

                <h5 class="addGameh5">Description</h5>
                <textarea id="game_description" type="text" class="form-control" rows="4" placeholder="..."></textarea>

                <div class="row">
                    <div class="col">
                        <h5 class="addGameh5">Developer</h5>
                        <input id="game_developer" type="text" class="form-control" placeholder="...">
                    </div>
                    <div class="col">
