                    <div class="col">
                        <h5 class="addGameh5">Release Date</h5>
                        <input id="game_release_date" type="date" class="form-control" placeholder="...">
                    </div>
                    <div class="col">
                        <h5 class="addGameh5">Launch Price</h5>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Â£</span>
                            </div>
                            <input id="game_launch_price" type="number" min="0.00" class="form-control" step="any"
