<!doctype html>
<html>

<head>
    <title>Add Game</title>

    <!-- All stylesheets and UI material. -->

    <!-- Bootstrap Stylesheet dependencies. -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- Custom client stylesheets. -->
    <link rel="stylesheet" href="CommonStylesheet.css">
    <link rel="stylesheet" href="Animations.css">
    <link rel="stylesheet" href="HexReviewsAddGamePageStylesheet.css">

    <!-- Custom icons and fonts. -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
</head>

<body>

    <!-- Top navigation bar. -->
    <nav class="navbar navbar-expand-lg navbar-dark hexNavbar">
        <a class="navbar-brand" href="#">Hex Reviews</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a id="navHome" class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a id="navAddGame" class="nav-link active" href="#">Add Game</a>
                </li>
                <li class="nav-item">
                    <a id="navViewGames" class="nav-link" href="#">View Games</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Admin Tools
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Delete User</a>
                        <a class="dropdown-item" href="#">Delete Review</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Page heading. -->
    <div class="page-header mainPageHeading">
        <h2>Add a New Game</h2>
    </div>

    <!-- All fields for adding in a new game. -->
    <div id="addNewGameArea">
        <form>
            <div class="form-group form-group-lg addGameFormGroup">

                <!-- Game Title -->
                <h5 class="addGameh5">Game Title</h5>
                <input id="game_title" type="text" class="form-control" placeholder="..." required>

                <h5 class="addGameh5">Description</h5>
                <textarea id="game_description" type="text" class="form-control" rows="4" placeholder="..."></textarea>

                <div class="row">
                    <div class="col">
                        <h5 class="addGameh5">Developer</h5>
                        <input id="game_developer" type="text" class="form-control" placeholder="...">
                    </div>
                    <div class="col">
                        <h5 class="addGameh5">Publisher</h5>
                        <input id="game_publisher" type="text" class="form-control" placeholder="...">
                    </div>
                </div>

                <h5 class="addGameh5">Genres</h5>
                <div id="genreBadges" class="badgeDiv">
                </div>

                <button id="gameGenreButton" class="btn btn-primary btn-block tagBlockButton hexButtons"
                    class="btn btn-outline-secondary" type="button">Add Genre Tags</button>
                
                <h5 class="addGameh5">Age Rating</h5>
                <div id="ageRatingBadges" class="badgeDiv">
                </div>

                <button id="gameAgeRatingButton" class="btn btn-primary btn-block tagBlockButton hexButtons"
                    class="btn btn-outline-secondary" type="button">Add Age Rating Tags</button>

                <h5 class="addGameh5">Platforms</h5>
                <div id="platformBadges" class="badgeDiv">
                </div>

                <button id="gamePlatformsButton" class="btn btn-primary btn-block tagBlockButton hexButtons"
                    class="btn btn-outline-secondary" type="button">Add Platform Tags</button>

                <div class="row">
                    <div class="col">
                        <h5 class="addGameh5">Release Date</h5>
                        <input id="game_release_date" type="date" class="form-control" placeholder="...">   
                    </div>
                    <div class="col">
                        <h5 class="addGameh5">Launch Price</h5>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Â£</span>
                            </div>
                            <input id="game_launch_price" type="number" min="0.00" class="form-control" step="any" placeholder="...">
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col">
                        <h5 class="addGameh5">Mulitplayer Capability</h5>
                        <label class="switch">
                            <input id="onlineCheckbox" type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </div>
                    <div class="col">
                        <h5 class="addGameh5">Upload Images</h5>
                        <input id="imageUpload" type="file" class="form-control-file" multiple>
                    </div>
                </div>

                <div id="imagePreview">
                    <hr>
                    <!-- All uploaded images will be previewed here. -->
                </div>
            </div>
        </form>
        <div class="alignCenterDiv">
            <button id="addGameButton" class="bigMainButton">Submit</button>
            <button id="viewGamesPageButton" class="bigMainButtonSecondary">View Games</button>
        </div>
    </div>

    <!-- Modals -->
    <!-- Genre tag selection modal. -->
    <div id="genreTagModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Select Genres</h3>
                </div>
                <div class="modal-body">
                    <div class="custom-control custom-checkbox">
                        <ul style="list-style-type:none;">
                            <li>
                                <label class="container">Action
                                    <input type="checkbox" class="genresCheckbox" id="actionCheckbox"
                                        aria-label="Action">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                            <li>
                                <label class="container">Adventure
                                    <input type="checkbox" class="genresCheckbox" id="adventureCheckbox"
                                        aria-label="Adventure">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                            <li>
                                <label class="container">Survival
                                    <input type="checkbox" class="genresCheckbox" id="survivalCheckbox"
                                        aria-label="Survival">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                            <li>
                                <label class="container">Horror
                                    <input type="checkbox" class="genresCheckbox" id="horrorCheckbox"
                                        aria-label="Horror">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="submitGenresButton" type="button" class="btn btn-primary hexButtons">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Age rating tag selection modal. -->
    <div id="ageRatingTagModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Select Age Restrictions</h3>
                </div>
                <div class="modal-body">
                    <div class="custom-control custom-checkbox">
                        <ul style="list-style-type:none;">
                            <li>
                                <label class="container">Includes in-game purchases
                                    <input type="checkbox" class="ageRatingCheckbox" id="purchasesCheckbox"
                                        aria-label="Includes in-game purchases">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                            <li>
                                <label class="container">Encourages gambling
                                    <input type="checkbox" class="ageRatingCheckbox" id="gamblingCheckbox"
                                        aria-label="Encourages gambling">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                            <li>
                                <label class="container">Frightening to children
                                    <input type="checkbox" class="ageRatingCheckbox" id="drugsCheckbox"
                                        aria-label="Frightening to children">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                            <li>
                                <label class="container">Nudity or sexual behaviour
                                    <input type="checkbox" class="ageRatingCheckbox" id="sexBox"
                                        aria-label="Nudity or sexual behaviour">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="submitAgeRatingsButton" type="button" class="btn btn-primary hexButtons">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Platform tag selection modal. -->
    <div id="platformTagModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Select Platforms</h3>
                </div>
                <div class="modal-body">
                    <div class="custom-control custom-checkbox">
                        <ul style="list-style-type:none;">
                            <li>
                                <label class="container">PC
                                    <input type="checkbox" class="platformCheckbox" id="pcCheckbox"
                                        aria-label="PC">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                            <li>
                                <label class="container">Xbox
                                    <input type="checkbox" class="platformCheckbox" id="xboxCheckbox"
                                        aria-label="Xbox">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                            <li>
                                <label class="container">PlayStation
                                    <input type="checkbox" class="platformCheckbox" id="playstationCheckbox"
                                        aria-label="PlayStation">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                            <li>
                                <label class="container">Switch
                                    <input type="checkbox" class="platformCheckbox" id="switchCheckbox"
                                        aria-label="Switch">
                                    <span class="checkmark"></span>
                                </label>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="submitPlatformsButton" type="button" class="btn btn-primary hexButtons">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Successful post modal. -->
    <div id="successfulPostModal" class="modal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="text-center">
                        <h3 id="successModalTitle" class="modal-title">Please Wait...</h3>
                        <div id="successfulPostModalSpinner" class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <i id="successIcon" class="material-icons md-48">done</i>
                        <i id="failureIcon" class="material-icons md-48">clear</i>
                    </div>
                </div>
                <div id="successfulPostModalFooter" class="modal-footer">
                    <button id="successfulModalCloseButton" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- All JavaScript material. -->

    <!-- JQuery JavaScript dependencies. -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Boostrap JavaScript Dependencies. -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

    <!-- Custom client JavaScript -->
    <script src="CommonLogic.js"></script>
    <script src="HexReviewsAddGamePageLogic.js"></script>

</body>

</html>