<!doctype html>
<html>

<head>
    <title>Add Game</title>

    <!-- All stylesheets and UI material. -->

    <!-- Bootstrap Stylesheet dependencies. -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- Custom client stylesheets. -->
    <link rel="stylesheet" href="CommonStylesheet.css">
    <link rel="stylesheet" href="Animations.css">
    <link rel="stylesheet" href="HexReviewsAddReviewPageStylesheet.css">
    <link rel="stylesheet" href="Hexagons.css">

    <!-- Custom icons and fonts. -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
</head>

<body>

    <!-- Top navigation bar. -->
    <nav class="navbar navbar-expand-lg navbar-dark hexNavbar">
        <a class="navbar-brand" href="#">Hex Reviews</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a id="navUserHome" class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a id="navWriteReview" class="nav-link" href="#">Your Reviews</a>
                </li>
                <li class="nav-item">
                    <a id="navUserViewGames" class="nav-link" href="#">View Games</a>
                </li>
                <li class="nav-item">
                    <a id="navViewSubcriptions" class="nav-link" href="#">Subscriptions</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Account
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a id="navViewUserProfile" class="dropdown-item" href="#">View Profile</a>
                        <a id="navMyReviews" class="dropdown-item" href="#">My Reviews</a>
                        <a id="navLogout" class="dropdown-item" href="#">Logout</a>
                    </div>
                </li>

            </ul>
        </div>
    </nav>

    <!-- Page heading. -->
    <div class="page-header mainPageHeading">
        <h1 id="userWelcome">Add a Review</h1>
    </div>

    <!-- All fields for adding in a new game. -->
    <div id="addNewReviewContainer">
        <div id="chooseGameButtonContianer">
            <button id="showChooseGameModal" class="bigMainButton">Choose a Game 
                <i id="searchIcon" class="material-icons">search</i>
            </button>
        </div>

        <form>
            <div class="form-group form-group-lg addGameFormGroup">

                <input id="reviewGameId" type="text" class="form-control" placeholder="..." hidden>

                <h5 class="addReviewh5">Title</h5>
                <input id="reviewTitle" type="text" class="form-control" placeholder="Please choose a game..." disabled>

                <h5 class="addReviewh5">Subtitle</h5>
                <input id="reviewSubtitle" type="text" class="form-control" placeholder="..." required>

                <h5 class="addReviewh5">Review</h5>
                <textarea id="reviewContent" type="text" class="form-control" rows="8" placeholder="..." required></textarea>


            </div>
        </form>
        <div class="alignCenterDiv">
                <h5 class="addReviewh5 alignCenterDiv">Rating</h5>
                <div id="ratingDiv">

                    <a  href="#">                    
                        <button id="rating1" class="ratingButton hb hb-md spin" data-toggle="button">1</button>                    
                    </a>
                    <a href="#">                    
                        <button id="rating2" class="ratingButton hb hb-md spin" data-toggle="button">2</button>                    
                    </a>
                    <a href="#">                    
                        <button id="rating3" class="ratingButton hb hb-md spin" data-toggle="button">3</button>                    
                    </a>
                    <a href="#">                    
                        <button id="rating4" class="ratingButton hb hb-md spin" data-toggle="button">4</button>                    
                    </a>
                    <a href="#">                    
                        <button id="rating5" class="ratingButton hb hb-md spin" data-toggle="button">5</button>                    
                    </a>
                        
                </div>
            <button id="submitReviewButton" class="bigMainButton">Submit</button>
        </div>
    </div>

    <!-- Modals -->
    <!-- Choose game modal. -->
    <div id="chooseGameModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Choose a Game</h3>
                </div>
                <div class="modal-body">
                    <div id="chooseGameModalSearchContainer">
                        <div class="input-group mb-3">
                        <input id="gameSearchBox" type="text" class="form-control" placeholder="Game title..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button id="modalGameSearchButton" class="btn btn-outline-secondary hexButtons" type="button">Search</button>
                            </div>
                        </div>
                    </div>
                    <div id="chooseGameModalResultsContainer">
                        <div id="searchedGamesContainer" class="list-group">
                            <!-- Game will appear here when searched. -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Successful post modal. -->
    <div id="successfulPostModal" class="modal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="text-center">
                        <h3 id="successModalTitle" class="modal-title">Please Wait...</h3>
                        <div id="successfulPostModalSpinner" class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <i id="successIcon" class="material-icons md-48">done</i>
                        <i id="failureIcon" class="material-icons md-48">clear</i>
                    </div>
                </div>
                <div id="successfulPostModalFooter" class="modal-footer">
                    <button id="successfulModalCloseButton" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- All JavaScript material. -->

    <!-- JQuery JavaScript dependencies. -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Boostrap JavaScript Dependencies. -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

    <!-- Custom client JavaScript -->
    <script src="CommonLogic.js"></script>
    <script src="HexReviewsAddReviewPageLogic.js"></script>
    <script src="Hexagons.min.js"></script>

</body>

</html>